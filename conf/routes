# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

######################
## CHANGE OF KEEPER
######################
# Home page


GET         /before-you-start               controllers.change_of_address.BeforeYouStart.present
POST        /before-you-start               controllers.change_of_address.BeforeYouStart.submit

# Page 2 Keeper status
GET         /keeper-status                  controllers.change_of_address.KeeperStatus.present
POST        /keeper-status                  controllers.change_of_address.KeeperStatus.submit

# Page 3 verify identity
GET         /verify-identity                controllers.change_of_address.VerifyIdentity.present
POST        /verify-identity                controllers.change_of_address.VerifyIdentity.submit

# Page 4 are you registered
GET         /are-you-registered             controllers.change_of_address.AreYouRegistered.present
POST        /are-you-registered             controllers.change_of_address.AreYouRegistered.submit

# Page 5 sign in provider
GET         /sign-in-provider               controllers.change_of_address.SignInProvider.present
POST        /sign-in-provider               controllers.change_of_address.SignInProvider.submit

# Page 6 IDA login page
GET         /login-page                     controllers.change_of_address.LoginPage.present
POST        /login-page                     controllers.change_of_address.LoginPage.submit

# Page 7 IDA login confirmation
GET         /login-confirmation             controllers.change_of_address.LoginConfirmation.present
POST        /login-confirmation             controllers.change_of_address.LoginConfirmation.submit

# Page 8 Authentication Page (SMS)
GET         /authentication                 controllers.change_of_address.Authentication.present
POST        /authentication                 controllers.change_of_address.Authentication.submit

# Page 9 V5c Search page
GET         /v5c-search                     controllers.change_of_address.VehicleSearch.present
POST        /v5c-search                     controllers.change_of_address.VehicleSearch.submit

#Page 10 Confirm Vehicle Details
GET         /confirm-vehicle-details        controllers.change_of_address.ConfirmVehicleDetails.present
POST        /confirm-vehicle-details        controllers.change_of_address.ConfirmVehicleDetails.submit

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                   controllers.Assets.at(path="/public", file)

######################
## DISPOSAL OF VEHICLE
######################

#page 1 - Before You Start
GET         /                                                   controllers.Application.index
GET         /disposal-of-vehicle/before-you-start               controllers.disposal_of_vehicle.BeforeYouStart.present
POST        /disposal-of-vehicle/before-you-start               controllers.disposal_of_vehicle.BeforeYouStart.submit

GET         /disposal-of-vehicle/setup-trade-details            controllers.disposal_of_vehicle.SetUpTradeDetails.present
POST        /disposal-of-vehicle/setup-trade-details            controllers.disposal_of_vehicle.SetUpTradeDetails.submit

GET         /disposal-of-vehicle/vehicle-lookup                 controllers.disposal_of_vehicle.VehicleLookup.present
POST        /disposal-of-vehicle/vehicle-lookup                 controllers.disposal_of_vehicle.VehicleLookup.submit

GET         /disposal-of-vehicle/dispose                        controllers.disposal_of_vehicle.Dispose.present
POST        /disposal-of-vehicle/dispose                        controllers.disposal_of_vehicle.Dispose.submit

GET         /disposal-of-vehicle/dispose-confirmation           controllers.disposal_of_vehicle.DisposeConfirmation.present
POST        /disposal-of-vehicle/dispose-confirmation           controllers.disposal_of_vehicle.DisposeConfirmation.submit

