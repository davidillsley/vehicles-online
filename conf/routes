# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                         controllers.change_of_address.P1.present

# Page 2 Keeper status
GET           /keeper-status            controllers.change_of_address.KeeperStatus.present
POST          /keeper-status            controllers.change_of_address.KeeperStatus.submit

# Page 3 verify identity
GET           /verify-identity          controllers.change_of_address.VerifyIdentity.present
POST          /verify-identity          controllers.change_of_address.VerifyIdentity.submit


# Page 4 are you registered
GET           /are-you-registered       controllers.change_of_address.AreYouRegistered.present
POST          /are-you-registered       controllers.change_of_address.AreYouRegistered.submit

# Page 5 sign in provider
GET           /sign-in-provider         controllers.change_of_address.SignInProvider.present
POST          /sign-in-provider         controllers.change_of_address.SignInProvider.submit

# Page 6 IDA login page
GET           /login-page               controllers.change_of_address.LoginPage.present
POST          /login-page               controllers.change_of_address.LoginPage.submit

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file             controllers.Assets.at(path="/public", file)